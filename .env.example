# Database
DATABASE_URL="postgresql://user:password@localhost:5433/ghana_creative_arts?schema=public"

# Session
# Generate a 64-character random string for production
# You can use: openssl rand -hex 32
SESSION_SECRET="replace-me-with-64-char-random-string-in-production"

# Email (SMTP)
# For development, you can use services like Mailtrap
# For production, use SendGrid, Mailgun, or AWS SES
EMAIL_HOST="smtp.gmail.com"
EMAIL_PORT="587"
EMAIL_USER="your-email@gmail.com"
EMAIL_PASSWORD="your-app-password"
EMAIL_FROM="Ghana Creative Arts <noreply@ghanaarts.gov.gh>"

# Application
APP_URL="http://localhost:3000"
NODE_ENV="development"

# File Upload (Future - for S3 or CloudFlare R2)
S3_BUCKET=""
S3_REGION=""
S3_ACCESS_KEY=""
S3_SECRET_KEY=""

# AzuraCast Radio Streaming
# Get your API URL and API key from your AzuraCast admin panel
# For hosted service: use your provider's URL (e.g., https://yourstation.azuracast.com)
# For self-hosted: use your server URL (e.g., https://radio.yourplatform.com)
AZURACAST_API_URL="https://yourstation.provider.com"
AZURACAST_API_KEY="your-api-key-here"
AZURACAST_ADMIN_KEY=""                  # Optional: for admin operations
AZURACAST_CACHE_TTL="60"                # Cache duration in seconds
AZURACAST_SYNC_INTERVAL="30"            # Auto-sync interval in seconds
